<?xml version='1.0' encoding='utf-8'?>
<widget id="com.heople.ekine" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>e-Kiné</name>
    <description>
        Application e-kiné
    </description>
    <author email="agence.heople@gmail.com" href="">
        Heople
    </author>
    <content src="index.html" />
    <gap:plugin name="pushbots-cordova-plugin" source="npm" spec="1.6.x" />
    <access origin="*" />
    <allow-navigation href="https://*youtube.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="orientation" value="portrait" />
    <preference name="android-build-tool" value="gradle" />
</widget>
